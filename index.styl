body
  background-color #0F889E
  color inputDarkGray
  font-family 'Open Sans', sans-serif

#pageContainer
  display flex
  flex-direction column
  min-width 800px
  position relative

#topHeader
  background-color white
  box-shadow 1px 3px 5px 0px borderLightGray
  display flex
  flex 0 1 auto
  justify-content center
  > div
    display flex
    flex 0 1 auto
    flex-wrap wrap
    justify-content space-between
    margin 0 2%
    width 1200px

.logo-ca
  flex none
  height 63px
  margin 6px 0
  width 100px

.userContainer
  align-items center
  display flex
  flex none
  height 50px
  margin 15px 0
  .userId
    line-height 18px
    margin-right 15px
    text-align right
    .userName
      color textGreen
      font-size 20px
      font-weight 300
    .userRole
      color textGray
      font-size 14px
      text-transform uppercase
  .avatar
    height 50px
    width 50px

#mainContainer
  display flex
  flex 0 1 auto
  justify-content center
  margin 30px 2% 5px 2%

#mainContainerInner
  display flex
  flex 0 1 auto
  flex-direction column
  position relative
  width 1200px


.disabled
  opacity 0.5
  cursor initial

.pointer
  cursor pointer
